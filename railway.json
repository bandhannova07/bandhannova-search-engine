{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd crawler && cargo build --release"
    },
    "deploy": {
        "startCommand": "cd crawler && ./target/release/search-crawler",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}